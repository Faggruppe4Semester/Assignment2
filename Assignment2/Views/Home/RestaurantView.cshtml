@model Assignment2.Models.RestaurantViewModel
@{
    ViewData["Title"] = "RestaurantView";
}

    <div class="col-sm-12">
        <div class="row justify-content-center">
            <h2>Check guests in to breakfast</h2>
        </div>
        <form id="checkInForm" asp-action="CheckIn" method="post" asp-controller="RestaurantView">
            <div class="row justify-content-center">
                <label for="roomNumber">Room number:</label>
            </div>
            <div class="row justify-content-center">
                <input type="text" id="roomNumber" name="roomNumber" />
            </div>
            <div class="row justify-content-center">
                <label for="adultsCheckedIn">Adults:</label>
            </div>
            <div class="row justify-content-center">
                <input type="text" id="adultsCheckedIn" name="adultsCheckedIn" />
            </div>
            <div class="row justify-content-center">
                <label for="kidsCheckedIn">Kids</label>
            </div>
            <div class="row justify-content-center">
                <input type="text" id="kidsCheckedIn" name="kidsCheckedIn" />
            </div>
            <div class="row justify-content-center">
                <input type="submit" value="Check In" id="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>

